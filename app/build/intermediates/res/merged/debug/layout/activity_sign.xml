<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:scrollbarStyle="outsideOverlay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sign_form_user_textview_identity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AndroidEX.Title"
            android:tag="title_0"
            android:layout_alignParentTop="true"
            android:text="@string/form_textview_title_identity" />

        <EditText
            android:id="@+id/sign_form_user_edittext_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_form_user_textview_identity"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:hint="@string/edittext_hint_firstname"
            android:inputType="textPersonName|textCapWords"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/sign_form_user_edittext_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_form_user_edittext_firstname"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:hint="@string/edittext_hint_lastname"
            android:inputType="textPersonName|textCapWords"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/sign_form_user_textview_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AndroidEX.Title"
            android:tag="title_1"
            android:layout_below="@id/sign_form_user_edittext_lastname"
            android:layout_marginTop="@dimen/viewgroup_margin"
            android:text="@string/form_textview_title_connection"/>

        <EditText
            android:id="@+id/sign_form_user_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_form_user_textview_connection"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:hint="@string/edittext_hint_email"
            android:inputType="textEmailAddress"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/sign_form_user_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_form_user_edittext_email"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:hint="@string/edittext_hint_password"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/sign_form_user_edittext_confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_form_user_edittext_password"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:hint="@string/edittext_hint_confirmpassword"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <LinearLayout
            android:id="@+id/sign_form_user_linearlayout_checkbox"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_form_user_edittext_confirmpassword"
            android:layout_marginTop="@dimen/viewgroup_margin">

            <CheckBox
                android:id="@+id/sign_form_user_checkbox_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/form_user_checkbox_horizontalmargin"
                android:layout_marginRight="@dimen/form_user_checkbox_horizontalmargin"
                android:button="@drawable/btn_check_holo_light"/>

            <TextView
                android:id="@+id/sign_form_user_textview_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="@string/form_textview_terms"
                android:clickable="true"/>

         </LinearLayout>

    </RelativeLayout>

</ScrollView>