                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.diderot.android.flousy.LogInActivity"
            android:label="@string/activity_login_name"
