<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tabitem_operation_layout_product"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="11">

        <TextView
            android:id="@+id/tabitem_operation_textview_date"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:gravity="left|center_vertical"
            android:text="@string/tabitem_textview_date"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tabitem_operation_textview_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:paddingLeft="@dimen/recycleritem_padding"
            android:paddingRight="@dimen/recycleritem_padding"
            android:gravity="left|center_vertical"
            android:text="@string/tabitem_textview_title"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tabitem_operation_textview_amount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:gravity="right|center_vertical"
            android:text="@string/tabitem_textview_amount"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>

    <View
        android:id="@+id/draweritem_dividerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerview_height_small"
        android:layout_below="@id/tabitem_operation_layout_product"
        android:background="@color/primary_material_light"/>

</RelativeLayout>

