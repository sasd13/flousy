<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tabitem_title_layout_titles"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="12">

        <TextView
            android:id="@+id/tabitem_title_textview_date"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="left|bottom"
            android:text="@string/tabitem_title_textview_date"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:ellipsize="none"/>

        <TextView
            android:id="@+id/tabitem_title_textview_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:gravity="left|bottom"
            android:paddingLeft="@dimen/activitycontent_padding"
            android:paddingRight="@dimen/activitycontent_padding"
            android:text="@string/tabitem_title_textview_name"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:ellipsize="none"/>

        <TextView
            android:id="@+id/tabitem_title_textview_value"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="right|bottom"
            android:text="@string/tabitem_title_textview_value"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:ellipsize="none"/>

    </LinearLayout>

    <View
        android:id="@+id/draweritem_title_dividerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerview_height_medium"
        android:layout_below="@id/tabitem_title_layout_titles"
        android:layout_marginTop="@dimen/dividerview_margintop"
        android:background="@color/black"/>

</RelativeLayout>

