<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding">

    <TextView
        android:id="@+id/account_textview_sold_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="@string/account_textview_sold_title"
        android:textColor="@color/red"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/account_textview_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/account_textview_sold_title"
        android:text="@string/account_textview_sold"
        android:textColor="@color/red"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_textview_sold_title"
        android:layout_marginTop="@dimen/viewgroup_margin">

        <LinearLayout
            android:id="@+id/account_linearlayout_operation_titles"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="11">

            <TextView
                android:id="@+id/account_textview_title_operation_date"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:gravity="left|bottom"
                android:text="@string/tabitemtitle_textview_date"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:ellipsize="none"/>

            <TextView
                android:id="@+id/account_textview_title_operation_title"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:gravity="left|bottom"
                android:paddingLeft="@dimen/recycleritem_padding"
                android:paddingRight="@dimen/recycleritem_padding"
                android:text="@string/tabitemtitle_textview_title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:ellipsize="none"/>

            <TextView
                android:id="@+id/account_textview_title_operation_amount"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="right|bottom"
                android:text="@string/tabitemtitle_textview_amount"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:ellipsize="none"/>

        </LinearLayout>

        <View
            android:id="@+id/account_dividerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerview_height_medium"
            android:layout_below="@id/account_linearlayout_operation_titles"
            android:layout_marginTop="@dimen/dividerview_margintop"
            android:background="@color/black"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/account_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/account_dividerview"
            android:layout_gravity="center"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"/>

    </RelativeLayout>

</RelativeLayout>