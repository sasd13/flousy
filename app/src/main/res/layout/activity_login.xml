<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/login_textview_title_margintop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_app_name"/>

    <LinearLayout
        android:id="@+id/login_layoutconnect"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/login_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/login_edittext_email_hint"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/default_textsize"
            android:imeOptions="actionGo"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/login_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/login_edittext_password_hint"
            android:inputType="textPassword"
            android:textSize="@dimen/default_textsize"
            android:imeOptions="actionGo"
            android:maxLines="1"
            android:layout_marginTop="@dimen/login_edittext_password_marginTop"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login_button_text"
            android:textColor="@color/white"
            android:textSize="@dimen/button_textsize"
            android:textStyle="bold"
            android:paddingTop="@dimen/button_verticalpadding"
            android:paddingBottom="@dimen/button_verticalpadding"
            android:paddingLeft="@dimen/button_horizontalpadding"
            android:paddingRight="@dimen/button_horizontalpadding"
            android:shadowColor="@android:color/black"
            android:onClick="startConnection"
            android:layout_marginTop="@dimen/login_edittext_password_marginTop"/>

        <TextView
            android:id="@+id/login_textview_restorepassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login_textview_restorepassword"
            android:layout_marginTop="@dimen/login_edittext_password_marginTop"/>

    </LinearLayout>

    <TextView
        android:id="@+id/login_textview_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/login_textview_signup"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
