<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activitycontent_padding"
    android:weightSum="9"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/ic_app_name"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center">

        <EditText
            android:id="@+id/login_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:hint="@string/login_edittext_email_hint"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/textsize_medium"
            android:imeOptions="actionGo"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/login_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:hint="@string/login_edittext_password_hint"
            android:inputType="textPassword"
            android:textSize="@dimen/textsize_medium"
            android:imeOptions="actionGo"
            android:singleLine="true"
            android:layout_marginTop="@dimen/login_edittext_password_margintop"
            android:fontFamily="sans-serif"/>

        <Button
            android:id="@+id/login_button_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_button_text"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/login_edittext_password_margintop"
            android:paddingTop="@dimen/button_verticalpadding"
            android:paddingBottom="@dimen/button_verticalpadding"
            android:paddingLeft="@dimen/button_horizontalpadding"
            android:paddingRight="@dimen/button_horizontalpadding"
            android:onClick="startConnection"/>

        <TextView
            android:id="@+id/login_textview_restorepassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_edittext_password_margintop"
            android:padding="@dimen/login_textview_restorepassword_padding"
            android:text="@string/login_textview_restorepassword"
            android:clickable="true"/>

    </LinearLayout>

    <TextView
        android:id="@+id/login_textview_signup"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="bottom|center_horizontal"
        android:padding="@dimen/login_textview_signup_padding"
        android:text="@string/login_textview_signup"
        android:clickable="true"/>

</LinearLayout>

