<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:scrollbars="vertical"
    android:scrollbarStyle="outsideOverlay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/form_operation_textview_daterealization_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/form_textview_date"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="bold"/>

        <View
            android:id="@+id/form_operation_dividerview_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerview_height_medium"
            android:layout_below="@id/form_operation_textview_daterealization_title"
            android:layout_marginTop="@dimen/dividerview_margintop"
            android:background="@color/red"/>

        <TextView
            android:id="@+id/form_operation_textview_daterealization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/form_operation_dividerview_1"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:text="@string/form_textview_hint_date"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_medium"/>

        <TextView
            android:id="@+id/form_operation_textview_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/form_operation_textview_daterealization"
            android:layout_marginTop="@dimen/viewgroup_margin"
            android:text="@string/form_operation_textview_type"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="bold"/>

        <View
            android:id="@+id/form_operation_dividerview_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerview_height_medium"
            android:layout_below="@id/form_operation_textview_type_title"
            android:layout_marginTop="@dimen/dividerview_margintop"
            android:background="@color/red"/>

        <RadioGroup
            android:id="@+id/form_operation_radiogroup_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/form_operation_dividerview_2"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp" >

            <RadioButton
                android:id="@+id/form_operation_radiobutton_type_debit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/form_operation_radiobutton_type_debit" />

            <RadioButton
                android:id="@+id/form_operation_radiobutton_type_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_margin_medium"
                android:text="@string/form_operation_radiobutton_type_credit" />

        </RadioGroup>

        <TextView
            android:id="@+id/form_operation_textview_title_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/form_operation_radiogroup_type"
            android:layout_marginTop="@dimen/viewgroup_margin"
            android:text="@string/form_operation_textview_title"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="bold"/>

        <View
            android:id="@+id/form_operation_dividerview_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerview_height_medium"
            android:layout_below="@id/form_operation_textview_title_title"
            android:layout_marginTop="@dimen/dividerview_margintop"
            android:background="@color/red"/>

        <EditText
            android:id="@+id/form_operation_edittext_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/form_operation_dividerview_3"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:hint="@string/form_operation_edittext_hint_title"
            android:inputType="textCapSentences"
            android:textSize="@dimen/textsize_medium"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/form_operation_textview_amount_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/form_operation_edittext_title"
            android:layout_marginTop="@dimen/viewgroup_margin"
            android:text="@string/form_operation_textview_amount"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="bold"/>

        <View
            android:id="@+id/form_operation_dividerview_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerview_height_medium"
            android:layout_below="@id/form_operation_textview_amount_title"
            android:layout_marginTop="@dimen/dividerview_margintop"
            android:background="@color/red"/>

        <EditText
            android:id="@+id/form_operation_edittext_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/form_operation_dividerview_4"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:hint="@string/form_operation_edittext_hint_amount"
            android:inputType="numberDecimal"
            android:textSize="@dimen/textsize_medium"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

    </RelativeLayout>

</ScrollView>