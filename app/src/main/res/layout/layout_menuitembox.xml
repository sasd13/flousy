<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menuitembox_imageview_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/menuitembox_imageview_margin"
        android:layout_marginBottom="@dimen/menuitembox_imageview_bottommargin"
        android:layout_marginLeft="@dimen/menuitembox_imageview_margin"
        android:layout_marginRight="@dimen/menuitembox_imageview_margin"
        android:src="@drawable/menuitembox"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/menuitembox_textview_topmargin"
        android:layout_marginBottom="@dimen/menuitembox_textview_margin"
        android:layout_marginLeft="@dimen/menuitembox_textview_margin"
        android:layout_marginRight="@dimen/menuitembox_textview_margin"
        android:text="@string/menuitembox_title"
        android:textStyle="bold"
        android:textSize="@dimen/menuitembox_textview_textsize"
        android:textColor="@android:color/black"/>

</LinearLayout>