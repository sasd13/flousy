<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycleritem_height_medium">

    <TextView
        android:id="@+id/draweritem_textview_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/recycleritem_padding_horizontal"
        android:paddingRight="@dimen/recycleritem_padding_horizontal"
        android:gravity="center_vertical"
        android:text="@string/draweritem_textview_label"
        android:textSize="@dimen/textsize_large"
        android:singleLine="true"/>

</FrameLayout>

