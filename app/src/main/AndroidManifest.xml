<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sasd13.flousy"
    android:installLocation="auto">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">

        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/activity_splashscreen"
            android:theme="@style/FlousyGreen.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:noHistory="true">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LogInActivity"
            android:label="@string/activity_login"
            android:theme="@style/FlousyGreen.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:launchMode="singleTask">
        </activity>

        <activity
            android:name=".SignActivity"
            android:label="@string/activity_sign"
            android:theme="@style/FlousyGreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:launchMode="singleTask">
        </activity>

        <activity
            android:name=".HomeActivity"
            android:label="@string/activity_home"
            android:theme="@style/FlousyGreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:launchMode="singleTask">
        </activity>

        <activity
            android:name=".ConsultActivity"
            android:label="@string/activity_consult"
            android:theme="@style/FlousyGreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:launchMode="singleTop"
            android:parentActivityName=".HomeActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <activity
            android:name=".fragment.consult.OperationFragment"
            android:label="@string/activity_operation"
            android:theme="@style/FlousyGreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:launchMode="singleTop"
            android:parentActivityName=".ConsultActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ConsultActivity" />
        </activity>

        <activity
            android:name=".FinancesActivity"
            android:label="@string/activity_finances"
            android:theme="@style/FlousyOrange"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:launchMode="singleTop"
            android:parentActivityName=".HomeActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <activity
            android:name=".FriendsActivity"
            android:label="@string/activity_friends"
            android:theme="@style/FlousyPurple"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:launchMode="singleTop"
            android:parentActivityName=".HomeActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/activity_settings"
            android:theme="@style/FlousyBrown"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:launchMode="singleTop"
            android:parentActivityName=".HomeActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

    </application>

</manifest>
