<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/account_textview_sold_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_marginTop="@dimen/activity_padding"
        android:text="@string/account_textview_sold_title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/account_textview_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/account_textview_sold_title"
        android:layout_marginRight="@dimen/activity_padding"
        android:text="@string/account_textview_sold"/>

    <TextView
        android:id="@+id/account_textview_operations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AndroidEX.Title.AllCaps"
        android:tag="title_0"
        android:layout_below="@id/account_textview_sold_title"
        android:layout_marginTop="@dimen/viewgroup_margin"
        android:text="@string/account_textview_operations"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/account_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/account_textview_operations"
        android:layout_gravity="center"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"/>

</RelativeLayout>