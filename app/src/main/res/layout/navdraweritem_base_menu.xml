<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:tag="navdraweritem_base_menu_view"
            android:layout_width="7dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/customGreenApp"/>

        <TextView
            android:tag="navdraweritem_base_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="5dp"
            android:gravity="left|center_vertical"
            android:text="Item"/>

    </LinearLayout>

    <View
        android:tag="navdraweritem_base_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/primary_dark_material_light"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"/>

</LinearLayout>
