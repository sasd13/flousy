<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diderot.android.flousy"
    android:installLocation="auto">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >

        <activity
            android:label=".SplashScreenActivity"
            android:label="@string/activity_splashscreen_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <intent-filter>
                <action android:label="android.intent.action.MAIN" />
                <category android:label="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label=".LogInActivity"
            android:label="@string/activity_login_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:label=".SignUpActivity"
            android:label="@string/activity_signup_name"
            android:parentActivityName=".LogInActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:label="android.support.PARENT_ACTIVITY"
                android:value=".LogInActivity" />
        </activity>

        <activity
            android:label=".RestorePasswordActivity"
            android:label="@string/activity_restorepassword_name"
            android:parentActivityName=".LogInActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:label="android.support.PARENT_ACTIVITY"
                android:value=".LogInActivity" />
        </activity>

        <activity
            android:label=".MenuActivity"
            android:label="@string/activity_menu_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:label=".NewActivity"
            android:label="@string/activity_new_name"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:label="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>

        <activity
            android:label=".ConsultActivity"
            android:label="@string/activity_consult_name"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:label="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>

        <activity
            android:label=".FinancesActivity"
            android:label="@string/activity_finances_name"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:label="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>

        <activity
            android:label=".FriendsActivity"
            android:label="@string/activity_friends_name"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:label="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>

        <activity
            android:label=".OffersActivity"
            android:label="@string/activity_offers_name"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:label="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>

        <activity
            android:label=".SettingsActivity"
            android:label="@string/activity_settings_name"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:label="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>

        <activity
            android:label=".SearchResultsActivity"
            android:label="@string/activity_settings_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:label="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:label="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

    </application>

</manifest>
