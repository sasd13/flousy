<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/account_ticktabactionbar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ViewStub
            android:id="@+id/account_ticktabactionbar_viewstub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AndroidEX.Activity"
        android:layout_below="@id/account_ticktabactionbar_container">

        <TextView
            android:id="@+id/account_textview_sold_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/account_textview_sold_title"
            android:textColor="@color/red"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/account_textview_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/account_textview_sold_title"
            android:text="@string/account_textview_sold"
            android:textColor="@color/red"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_textview_sold_title"
            android:layout_marginTop="@dimen/viewgroup_margin">

            <TextView
                android:id="@+id/account_textview_operations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="@string/account_textview_operations"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:ellipsize="none"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/account_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/account_textview_operations"
                android:layout_gravity="center"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideOverlay"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>