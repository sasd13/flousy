<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:scrollbars="vertical"
    android:scrollbarStyle="outsideOverlay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sign_form_user_textview_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/form_textview_title_identity"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_alignParentTop="true"/>

        <View
            android:id="@+id/sign_form_user_dividerview_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerview_height_small"
            android:layout_below="@id/sign_form_user_textview_identity"
            android:layout_marginTop="@dimen/dividerview_margintop"
            android:background="@color/green"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sign_form_recyclerview_identity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/sign_form_user_dividerview_1"
            android:padding="@dimen/activity_padding"
            android:scrollbars="none"/>

        <LinearLayout
            android:id="@+id/sign_form_user_linearlayout_checkbox"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_form_recyclerview_identity"
            android:layout_marginTop="@dimen/viewgroup_margin">

            <CheckBox
                android:id="@+id/sign_form_user_checkbox_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/form_user_checkbox_horizontalmargin"
                android:layout_marginRight="@dimen/form_user_checkbox_horizontalmargin"
                android:button="@drawable/btn_check_holo_light"/>

            <TextView
                android:id="@+id/sign_form_user_textview_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="@string/form_textview_terms"
                android:clickable="true"/>

         </LinearLayout>

    </RelativeLayout>

</ScrollView>