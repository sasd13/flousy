<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basegriditem"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/basegriditem_imageview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/griditembox_imageview_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/griditembox_imageview_margin"
        android:layout_marginBottom="@dimen/griditembox_imageview_bottommargin"
        android:layout_marginLeft="@dimen/griditembox_imageview_margin"
        android:layout_marginRight="@dimen/griditembox_imageview_margin"
        android:src="@drawable/griditem"/>

    <TextView
        android:id="@+id/basegriditem_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/griditembox_textview_topmargin"
        android:layout_marginBottom="@dimen/griditembox_textview_margin"
        android:layout_marginLeft="@dimen/griditembox_textview_margin"
        android:layout_marginRight="@dimen/griditembox_textview_margin"
        android:text="@string/griditem_text"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_medium"
        android:textColor="@color/black"/>

</LinearLayout>